{
    "variables": {
        "ami_name": "custom-amzn2-ami-ecs-gpu-hvm-x86_64-ebs-{{isotime \"20060102150405\"}}",
        "region": "{{env `AWS_REGION`}}",
        "vpc_id": "{{env `VPC_ID`}}",
        "subnet_id": "{{env `SUBNET_ID`}}",
        "security_group_id": "{{env `SECURITY_GROUP_ID`}}"
    },
    "builders": [
        {
            "type": "amazon-ebs",
            "region": "{{user `region`}}",
            "instance_type": "t3.micro",
            "ssh_username": "ec2-user",
            "ami_name": "{{user `ami_name`}}",
            "ami_description": "Customized Amazon Linux AMI 2 ECS HVM GP2",
            "associate_public_ip_address": "true",
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "amzn2-ami-ecs-gpu-hvm-*-x86_64-ebs",
                    "root-device-type": "ebs"
                },
                "owners": [
                    "137112412989",
                    "591542846629",
                    "801119661308",
                    "102837901569",
                    "013907871322",
                    "206029621532",
                    "286198878708",
                    "443319210888"
                ],
                "most_recent": true
            }
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "sudo sed -i'' -e 's/OPTIONS=\"--default-ulimit/OPTIONS=\"--default-runtime nvidia --default-ulimit/' /etc/sysconfig/docker",
                "sudo systemctl restart docker.service",
                "ps -ef | grep [d]ocker | grep -q 'default-runtime nvidia'"
            ]
        }
    ]
}
